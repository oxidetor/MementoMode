<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="135"
                android:startColor="@color/zen_success"
                android:endColor="@color/zen_sage"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="135"
                android:startColor="@color/zen_error"
                android:endColor="@color/zen_clay"
                android:type="linear" />
        </shape>
    </item>
</selector> 
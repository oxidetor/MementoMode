<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark application theme. -->
    <style name="Theme.AppBlocker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Material You colors for dark theme -->
        <item name="android:windowBackground">@color/windowBackground</item>
        
        <!-- Card styling -->
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>

        <!-- Override text colors for dark mode -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>
    
    <!-- Theme with no action bar for activities with toolbar -->
    <style name="Theme.AppBlocker.NoActionBarWithToolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material You colors for dark theme -->
        <item name="android:windowBackground">@color/windowBackground</item>
        
        <!-- Card styling -->
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>

        <!-- Override text colors for dark mode -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <!-- Dark mode overrides for specific components -->
    <style name="ZenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/zen_soft_pink</item>
    </style>
    
    <style name="ZenTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    
    <style name="TextAppearance.ZenHeadline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="TextAppearance.ZenBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="TextAppearance.ZenCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    
    <style name="ZenAlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="ZenAlertDialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/textSecondary</item>
    </style>
</resources> 